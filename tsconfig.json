{
  "compilerOptions": {
    "lib": ["dom", "es2021"],
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals", "@types/node"],
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@layoutKit/*": ["src/components/layout-kit/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@pages/*": ["src/pages/*"],
      "@utils/*": ["src/utils/*"],
      "@src/*": ["src/*"]
    }
  },
  "include": ["src"]
}
